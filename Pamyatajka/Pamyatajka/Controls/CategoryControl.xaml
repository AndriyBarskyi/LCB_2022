<UserControl x:Class="PamyatajkaUI.Controls.CategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PamyatajkaUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Grid.ColumnSpan="2" Content="Категорія" FontSize="32"></Button>
        <Button Grid.Row="1" Content="Повторювати" FontSize="18"></Button>
        <Button Grid.Row="1" Grid.Column="1" Content="Вивчати" FontSize="18"></Button>
    </Grid>
</UserControl>
