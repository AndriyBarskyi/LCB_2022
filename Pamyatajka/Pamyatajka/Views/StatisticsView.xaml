        <StackPanel Orientation="Horizontal" Margin="40 0 0 0">
            <Label x:Name="StatisticsLabel" Content="Статистика" FontSize="42" HorizontalAlignment="Left" FontFamily="Microsoft YaHei" FontWeight="Bold" Margin="20 40 0 0" />
